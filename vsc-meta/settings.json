{
    "workbench.colorCustomizations": {
        "[Quiet Light]": {
            "editor.background": "#FFFFFF",
            "editor.lineHighlightBackground": "#F9F9F9",
        },
        "titleBar.activeBackground": "#fffd7f",
        "titleBar.inactiveBackground": "#f2f1c9",
    },
    "editor.fontSize": 13,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "",
                }
            }
        ],
        "[Quiet Light]": {
            "comments": "#009900",
        },
    },
    "cSpell.userWords": [
        "argparser",
        "bytestr",
        "configerator",
        "ddriver",
        "fbcode",
        "fbpkg",
        "ndarray",
        "oncall",
        "openai",
        "pyright",
        "srcs"
    ],
    "editor.fontLigatures": true,
    "todohighlight.isEnable": true,
    // FIXME, ddriver: this should only go to comment scopes, but it's global now.
    "todohighlight.keywordsPattern": "(TODO|FIXME|DEBUG|HACK|BUGBUG)(, [a-zA-Z0-0]*)?:",
    "todohighlight.defaultStyle": {
        "color": "#9B5BA6",
        "backgroundColor": "#FFF9A6",
        "overviewRulerColor": "#ffab00",
        "cursor": "pointer",
        "border": "1px solid #eee",
        "borderRadius": "2px",
    },
    "security.workspace.trust.untrustedFiles": "open",
    "files.associations": {
        "*.cedar": "python"
    },
    "workbench.iconTheme": "vscode-icons",
    "errorLens.messageBackgroundMode": "none",
    "vsicons.dontShowNewVersionMessage": true,
    "omnisharp.useModernNet": false,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning"
    ],
    "gitlens.plusFeatures.enabled": false,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
    "powershell.codeFormatting.newLineAfterCloseBrace": false,
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useConstantStrings": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "powershell.promptToUpdatePowerShell": false,
    "powershell.integratedConsole.startInBackground": true,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "[cpp]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[csharp]": {
        "editor.tabSize": 4
    },
    "editor.accessibilitySupport": "off",
    "explorer.confirmDelete": false,
    "errorLens.gutterIconsEnabled": true,
    "editor.fontFamily": "'LigaConsolas Nerd Font', 'Courier New', monospace",
    "editor.minimap.enabled": true,
    "editor.showFoldingControls": "always",
    "workbench.panel.defaultLocation": "bottom",
    "powershell.integratedConsole.showOnStartup": false,
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "git.autofetch": true,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Quiet Light"
}
